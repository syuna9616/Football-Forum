<div class="card">

  <div class="card-header">
    <%=link_to "編集", "/", class: "btn btn-outline-success" %>
    <h3><%= @board.title %></h3>
    <h6 class="text-muted">作成日時：<%=@board.created_at.to_s(:datetime_jp)%></h6>
  </div>

  <div class="card-body">
    <p><%= @board.body %></p>
  </div>

  <div class="card-footer text-muted">
    <p>作成者：<%= @board.name %></p>
  </div>

</div>
