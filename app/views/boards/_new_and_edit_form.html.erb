<%= form_with model: board, local: true do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control", value: "#{current_user.user_name}", readonly: true %>
  </div>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <span>カテゴリー</span>
    <%= f.select :category_id, Category.all.map { |category| [category.name, category.id] }, {include_blank: 'カテゴリーを選択してください'}, class:"form-control"  %>
  </div>

  <%= f.submit "投稿", class: "btn btn-success" %>
<% end %>
