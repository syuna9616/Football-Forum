<%= render partial: "boards/flash" %>
<table class="table table-hover boards__table">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>カテゴリー</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%=board.id%></td>
        <td><%=board.title%></td>
        <td><%=board.name%></td>
        <td><%=board.created_at.to_s(:datetime_jp)%></td>
        <td><%=board.category.name %></td>
        <td><%=link_to "詳細", board, class: "btn btn-outline-success" %></td>
        <td><%=link_to "編集", edit_board_path(board), class: "btn btn-outline-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @boards %>
