<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ml-auto boards__linkBox">
    <%=link_to "新規作成", new_board_path, class: "btn btn-outline-success" %>
  </div>
</div>
<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<table class="table table-hover boards__table">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <th><%=board.id%></th>
        <th><%=board.title%></th>
        <th><%=board.name%></th>
        <th><%=board.created_at%></th>
        <th><%=board.updated_at%></th>
      </tr>
    <% end %>
  </tbody>
</table>
