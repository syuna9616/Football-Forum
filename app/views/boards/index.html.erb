<%= render partial: "boards/flash" %>
<table class="table table-hover boards__table">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th></th>
      <th>作成日時</th>
      <th>カテゴリー</th>
      <th></th>
      <% if current_user %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%=board.id%></td>
        <td><%=board.title%></td>
        <td><%=board.name%></td>
        <td><div class="user-image-index">
          <%= image_tag("#{User.find(board.user_id).image}")%>
        </div></td>
        <td><%=board.created_at.to_s(:datetime_jp)%></td>
        <td><%=board.category.name %></td>
        <td><%=link_to "詳細", board, class: "btn btn-outline-success" %></td>
        <% if current_user %>
          <td>
            <% if current_user && board.user_id == current_user.id %>
                <%=link_to "編集", edit_board_path(board), class: "btn btn-outline-success" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @boards %>
