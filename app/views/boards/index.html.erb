<div class="d-flex align-items-center">
  <div class="ml-auto boards__linkBox">
    <%= form_with url: boards_path, method: :get, class: "boards__searchForm" do %>
      <%= select_tag :category_id,
                     options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
                     {
                       prompt: 'カテゴリーで絞り込み',
                       class: "form-control boards__select",
                       onchange: "submit(this.form);"
                     }
      %>
    <% end %>
    <%=link_to "新規作成", new_board_path, class: "btn btn-outline-primary" %>
  </div>
</div>
<%= render partial: "boards/flash" %>
<table class="table table-hover boards__table">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th>カテゴリー</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%=board.id%></td>
        <td><%=board.title%></td>
        <td><%=board.name%></td>
        <td><%=board.created_at.to_s(:datetime_jp)%></td>
        <td><%=board.updated_at.to_s(:datetime_jp)%></td>
        <td><%=board.category.name %></td>
        <td><%=link_to "詳細", board, class: "btn btn-outline-success" %></td>
        <td><%=link_to "編集", edit_board_path(board), class: "btn btn-outline-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @boards %>
