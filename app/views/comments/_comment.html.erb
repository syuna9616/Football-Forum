<div class="p-comment__item">
  <p><%= simple_format(comment.comment) %></p>
  <div class="p-comment__bottomLine">
    <span>
      <% if current_user && current_user.id == comment.user_id%>
        <%=link_to "削除", comment_path(comment), class: "btn btn-outline-danger", method: :delete, data: {confirm: "本当に掲示板を削除しますか？"} %>
      <% end %>
    </span>
    <span>ID:<%= comment.id %></span>
    <span><%= comment.user.user_name %></span>
    <span><%= link_to image_tag("#{User.find(comment.user_id).image}"), "/users/profile/#{comment.user_id}"%></span>
    <span><%= comment.created_at.to_s(:datetime_jp) %></span>
  </div>
</div>
